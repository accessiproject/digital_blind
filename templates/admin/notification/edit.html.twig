{% extends 'base_admin.html.twig' %}

{% block title %}Modification du compte – Edition{% endblock %}

{% block body %}
    {{ form_start(form) }}
        <h1>Modification du compte – Edition</h1>
        <fieldset>
            <legend>
                <h2>Informations générales :</h2>
            </legend>
            <div class="form-group">
                {{ form_label(form.username, 'Votre nom de l\'utilisateur (obligatoire) :') }}
                {{ form_widget(form.username) }}
            </div>
            <div class="form-group">
                {{ form_label(form.email, 'Votre adresse email (obligatoire) :') }}
                {{ form_widget(form.email) }}                
            </div>
            <button type="submit">Enregistrer les modifications</button>
    {{ form_end(form) }}
{% endblock %}